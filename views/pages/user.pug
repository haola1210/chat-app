extends ../layouts/common.pug

block content
	.container
		.row.justify-content-center
		.col-sm-8.col-md-6
			h3 Who you want to chat with?
			form.form-inline(method='post')
				input.form-control(type='text', name="name", placeholder="Enter your friend's name")
				button.btn.btn-success(type='submit') Find
			h3 Your friends:
			if err
				div(class="alert alert-danger", role="alert")=err
			nav(class="nav flex-column")
				if list
					each user in list
						-var url = `http://localhost:3000/chat/${user._id}`
						a(class="nav-link btn btn-light" href=url)=user.name
