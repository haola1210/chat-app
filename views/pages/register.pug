extends ../layouts/common.pug

block content
	h1.text-center Sign up page
	.container
		.row.justify-content-center
			.col-sm-8.col-md-6
				if errors
					each error in errors
						div(class="alert alert-danger", role="alert")=error
				form(action="/signup", method="POST").bg-dark.text-light.d-flex.flex-column.rounded.p-3.mt-5
					h3.text-center Sign up form
					.form-group
						label(for='acc-name') Your name:
						input#acc-name.form-control(type='text', name='accName', placeholder='Type your name...' required="" maxlength="20" pattern=".{8,}" title="At least 8 characters")
					.form-group
						label(for='account') Account:
						input#account.form-control(type='text', name='account', placeholder='Type your account...' required="" pattern=".{8,}" title="At least 8 characters")
					.form-group
						label(for='password') Password
						input#password.form-control(type='password', name='password', placeholder='Type your password...' required="" attern=".{8,}" title="At least 8 characters")
					.form-group
						label(for='re-password') Retype password
						input#re-password.form-control(type='password', name='rePassword', placeholder='Retype your password...' required="" attern=".{8,}" title="At least 8 characters")
					button.btn.btn-primary.my-2 Sign up
